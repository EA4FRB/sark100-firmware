include "m8c.inc"


;--------------------------------------------------
; Constants for PWM8_BUZZ API's.
;--------------------------------------------------

PWM8_BUZZ_CONTROL_REG_START_BIT:           equ 0x01    ; Control register start bit
PWM8_BUZZ_INT_REG:                         equ 0x0e1
PWM8_BUZZ_INT_MASK:                        equ 0x20


;--------------------------------------------------
; Constants for PWM8_BUZZ user defined values
;--------------------------------------------------

PWM8_BUZZ_PERIOD:                          equ 0x00
PWM8_BUZZ_PULSE_WIDTH:                     equ 0x00


;--------------------------------------------------
; Register Address Constants for PWM8_BUZZ
;--------------------------------------------------

PWM8_BUZZ_COUNTER_REG:                 equ 0x34   ; DR0 Count register
PWM8_BUZZ_PERIOD_REG:                  equ 0x35   ; DR1 Period register
PWM8_BUZZ_COMPARE_REG:                 equ 0x36   ; DR2 Compare register
PWM8_BUZZ_CONTROL_REG:                 equ 0x37   ; Control register
PWM8_BUZZ_FUNC_REG:                    equ 0x34   ; Function register
PWM8_BUZZ_INPUT_REG:                   equ 0x35   ; Input register
PWM8_BUZZ_OUTPUT_REG:                  equ 0x36   ; Output register


;--------------------------------------------------
; PWM8_BUZZ Macro 'Functions'
;--------------------------------------------------

   macro PWM8_BUZZ_Start_M
   or    reg[PWM8_BUZZ_CONTROL_REG],  PWM8_BUZZ_CONTROL_REG_START_BIT
   endm

   macro PWM8_BUZZ_Stop_M
   and   reg[PWM8_BUZZ_CONTROL_REG], ~PWM8_BUZZ_CONTROL_REG_START_BIT
   endm

   macro PWM8_BUZZ_EnableInt_M
   M8C_EnableIntMask PWM8_BUZZ_INT_REG, PWM8_BUZZ_INT_MASK
   endm

   macro PWM8_BUZZ_DisableInt_M
   M8C_DisableIntMask PWM8_BUZZ_INT_REG, PWM8_BUZZ_INT_MASK
   endm


